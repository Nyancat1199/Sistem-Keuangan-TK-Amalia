<%- include('./includes/header.ejs') %>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <%- include('./includes/sidebar.ejs')%>
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include('./includes/header-dekstop.ejs')%>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">Daftar Pengeluaran</h2>
                                    <button class="au-btn au-btn-icon au-btn--blue" id="btnTambahPengeluaran" type="button" data-toggle="modal" data-target="#modalTambahPengeluaran">
                                        <i class="zmdi zmdi-plus"></i>Tambah</button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row m-t-25">
                            <div class="col-lg-12">
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama Pengeluaran</th>
                                                <th>Biaya Tetap</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% dataPengeluaran.forEach((pengeluaran, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td class="pt-3"><%= pengeluaran.namaPengeluaran %></td>
                                                <td class="pt-3"><%= pengeluaran.biayaTetap === 0 ? 'Tidak Ditentukan' : pengeluaran.biayaTetap %></td>
                                                <td class="d-flex flex-row justify-content-center">
                                                    <button class="btn btn-primary mr-1" onclick="getDataPengeluaran('<%= pengeluaran._id %>', '<%= pengeluaran.namaPengeluaran %>', '<%= pengeluaran.biayaTetap %>')" data-toggle="modal" data-target="#modalTambahPengeluaran">Edit</button>
                                                    <form action="/admin/delete-pengeluaran/<%= pengeluaran._id %>" method="POST">
                                                        <button type="submit" class="btn btn-danger">Hapus</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
        <div class="modal fade bd-example-modal-lg" id="modalTambahPengeluaran" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleModalPengeluaran"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <form action="" method="POST" id="formPengeluaran">
                    <div class="modal-body" id="formPengeluaranBody">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Nama Pengeluaran</label>
                            <input type="text" class="form-control" name="namePengeluaran" id="namePengeluaran">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="checkCostPengeluaran" type="checkbox" id="checkCostPengeluaran">
                            <label class="form-check-label" for="flexCheckDefault">
                              Biaya Tetap
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btn-createUser" class="btn btn-primary">Buat</button>
                        <button type="button" class="btn btn-secondary btn-closeUser" data-dismiss="modal">Close</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
       
    </div>
    <script src="/js/pengeluaran.js"></script>
    <%- include('./includes/footer.ejs') %>
<%- include('./includes/header.ejs') %>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <%- include('./includes/sidebar.ejs')%>
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include('./includes/header-dekstop.ejs')%>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">Detail Pengeluaran</h2>
                                    <button class="au-btn au-btn-icon au-btn--blue" id="btnTambahDetailPengeluaran" type="button" data-toggle="modal" data-target="#modalTambahDetailPengeluaran">
                                        <i class="zmdi zmdi-plus"></i>Tambah</button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row m-t-25">
                            <div class="col-lg-12">
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama Pengeluaran</th>
                                                <th>Tanngal Pengeluaran</th>
                                                <th>Total</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% detailPengeluaran.forEach((pengeluaran, index) => {%>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td class="pt-3"><%= pengeluaran.pengeluaran.namaPengeluaran %></td>
                                                <td class="pt-3"><%= pengeluaran.tanggalPengeluaran.toLocaleDateString() %></td>
                                                <td class="pt-3"><%= pengeluaran.totalPengeluaran %></td>
                                                <td class="d-flex flex-row justify-content-center">
                                                    <button class="btn btn-primary mr-1" id="btnEditDetailPengeluaran" onclick="getDataDetailPengeluaranByPengeluaranId('<%= pengeluaran._id %>')" data-toggle="modal" data-target="#modalTambahDetailPengeluaran">Edit</button>
                                                </td>
                                            </tr>
                                           <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
        <div class="modal fade bd-example-modal-lg" id="modalTambahDetailPengeluaran" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tambah Pemasukan</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <form action="" method="POST" id="formDetailPengeluaran">
                    <div class="modal-body" id="formDetailPemasukanBody">
                        <div class="form-group">
                            <select  name="pengeluaranId" id="selectPengeluaran" class="form-control">
                                <option selected disabled>Pilih Masukan</option>
                                <% dataPengeluaran.forEach((pengeluaran) => { %>
                                <option value="<%= pengeluaran._id %>"><%= pengeluaran.namaPengeluaran %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Total</label>
                            <input type="text" class="form-control" name="totalPengeluaran" id="totalPengeluaran">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btn-createUser" class="btn btn-primary">Buat</button>
                        <button type="button" class="btn btn-secondary btn-closeUser" data-dismiss="modal">Close</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
       
    </div>
    <script src="/js/detailPengeluaran.js"></script>
    <%- include('./includes/footer.ejs') %>
<%- include('./includes/header.ejs') %>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <%- include('./includes/sidebar.ejs')%>
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include('./includes/header-dekstop.ejs')%>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">Daftar Pemasukan</h2>
                                    <button class="au-btn au-btn-icon au-btn--blue" type="button" data-toggle="modal" data-target="#modalTambahPemasukan">
                                        <i class="zmdi zmdi-plus"></i>Tambah</button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row m-t-25">
                            <div class="col-lg-12">
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama Pemasukan</th>
                                                <th>Biaya Tetap</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% dataPemasukan.forEach((pemasukan, number) => { %>
                                            <tr>
                                                <td class="pt-3"><%= number + 1 %></td>
                                                <td class="pt-3"><%= pemasukan.namaPemasukan %></td>
                                                <td class="pt-3"><%= pemasukan.biayaTetap !== 0 ? pemasukan.biayaTetap : 'Tidak Ditentukan' %></td>
                                                <td class="d-flex flex-row justify-content-center">
                                                    <button class="btn btn-primary mr-1" onclick="getDataPemasukan('<%= pemasukan._id %>', '<%= pemasukan.namaPemasukan %>', '<%= pemasukan.biayaTetap %>')" data-toggle="modal" data-target="#modalEditPemasukan">Edit</button>
                                                    <form action="/admin/deletePemasukan/<%= pemasukan._id %>" method="POST">
                                                        <button type="submit" class="btn btn-danger">Hapus</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
        <div class="modal fade bd-example-modal-lg" id="modalTambahPemasukan" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tambah Pemasukan</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <form action="/admin/pemasukan" method="POST">
                    <div class="modal-body" id="formPemasukanBody">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Nama Pemasukan</label>
                            <input type="text" class="form-control" name="namePemasukan" id="namePemasukan">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="checkCost" type="checkbox" id="check-cost">
                            <label class="form-check-label" for="flexCheckDefault">
                              Biaya Tetap
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btn-createUser" class="btn btn-primary">Buat</button>
                        <button type="button" class="btn btn-secondary btn-closeUser" data-dismiss="modal">Close</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
        <div class="modal fade bd-example-modal-lg" id="modalEditPemasukan" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Pemasukan</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <form action="" method="POST" id="formEditPemasukan">
                    <div class="modal-body" id="formEditPemasukanBody">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Nama Pemasukan</label>
                            <input type="text" class="form-control" name="editNamePemasukan" id="editNamePemasukan">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="checkEditCost" type="checkbox" id="checkEditCost">
                            <label class="form-check-label" for="flexCheckDefault">
                              Biaya Tetap
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Buat</button>
                        <button type="button" id="btnCloseEditPemasukan" class="btn btn-secondary btn-closeUser" data-dismiss="modal">Close</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
    </div>
    <script src="/js/pemasukan.js"></script>
    <%- include('./includes/footer.ejs') %>
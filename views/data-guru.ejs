<%- include('./includes/header.ejs') %>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <%- include('./includes/sidebar.ejs')%>
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include('./includes/header-dekstop.ejs')%>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">Data Guru</h2>
                                    <button class="au-btn au-btn-icon au-btn--blue" type="button" data-toggle="modal" data-target="#modalTambahGuru">
                                        <i class="zmdi zmdi-plus"></i>Tambah</button>
                                </div>
                            </div>
                        </div>
                        <% if(message) { %>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <div class="overview-wrap">
                                        <div class="alert alert-success col-md-12" role="alert">
                                            <%= message %>
                                          </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        <div class="row m-t-25">
                            <div class="col-lg-12">
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama Lengkap</th>
                                                <th>NUPTK</th>
                                                <th>NIK</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let guru of guruData) { %>
                                            <tr>
                                                <td class="pt-3"><%= number++ %></td>
                                                <td class="pt-3"><%= guru.namaGuru %></td>
                                                <td class="pt-3"><%= guru.nuptk %></td>
                                                <td class="pt-3"><%= guru.nik %></td>
                                                <td class="d-flex flex-row justify-content-center">
                                                    <button class="btn btn-success mr-1" type="button" data-toggle="modal" data-target="#modalDetailGuru">Detail</button>
                                                    <button class="btn btn-primary mr-1">Edit</button>
                                                    <form action="/admin/guru/<%= guru._id %>" method="POST">
                                                        <button type="submit" class="btn btn-danger">Hapus</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
        <div class="modal fade bd-example-modal-lg" id="modalTambahGuru" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tambah User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <form action="/admin/guru" method="POST">
                    <div class="modal-body">
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">Nama Lengkap</label>
                            <input type="text" class="form-control" name="name" id="name">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">NIK</label>
                            <input type="text" class="form-control" name="nik" id="nik">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">NUPTK</label>
                            <input type="text" class="form-control" name="nuptk" id="nuptk">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">Alamat</label>
                            <input type="text" class="form-control" name="alamat" id="alamat">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlSelect1">Role</label>
                            <select class="form-control" name="pendidikan" id="pendidikan">
                              <option value="" disabled selected>-- Pilih Pendidikan--</option>
                              <option value="S1-Keatas">S1-Keatas</option>
                              <option value="S1">S1</option>
                              <option value="SMK/SMA">SMK/SMA</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btn-createUser" class="btn btn-primary">Buat</button>
                        <button type="button" class="btn btn-secondary btn-closeUser" data-dismiss="modal">Close</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
        <div class="modal fade bd-example-modal-lg" id="modalDetailGuru" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detail Guru</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <form action="/admin/guru" method="POST">
                    <div class="modal-body">
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">Nama Lengkap</label>
                            <input type="text" class="form-control" name="name" id="name">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">NIK</label>
                            <input type="text" class="form-control" name="nik" id="nik">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">NUPTK</label>
                            <input type="text" class="form-control" name="nuptk" id="nuptk">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlInput1">Alamat</label>
                            <input type="text" class="form-control" name="alamat" id="alamat">
                        </div>
                        <div class="form-group input-create-user">
                            <label for="exampleFormControlSelect1">Role</label>
                            <select class="form-control" name="pendidikan" id="pendidikan">
                              <option value="" disabled selected>-- Pilih Pendidikan--</option>
                              <option  value="S1-Keatas">S1-Keatas</option>
                              <option value="S1">S1</option>
                              <option value="SMK/SMA">SMK/SMA</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="btn-createUser" class="btn btn-primary">Buat</button>
                        <button type="button" class="btn btn-secondary btn-closeUser" data-dismiss="modal">Close</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
    </div>
    <script src="/js/guru.js"></script>
    <%- include('./includes/footer.ejs') %>